version: '3'
services:
    node:
     build:
       context: .
     volumes:
        - ./:/usr/src/app 
     command: sh -c "npm start" 
     ports:
       - "3000:3000"
    nginx:
      image: nginx
      container_name: nginx
      ports:
        - 8080:80
      volumes:
        - ./build:/var/www
        - ./containers/nginx:/etc/nginx/conf.d/
      depends_on:
        - node    
    
